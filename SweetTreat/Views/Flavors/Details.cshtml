@{
  Layout = "_Layout";
}

@model SweetTreat.Models.Flavor

<h2>Flavor Details</h2>
<hr/>
<h4>@Html.DisplayFor(model => model.FlavorName)</h4>

@if(@Model.Treats.Count == 0)
{
  <p>No Treats have this Flavor.</p>
}
else
{
  <h4>Treats with this Flavor:</h4>
  <ul>
  @foreach(var join in Model.Treats)
  {
    

    @using (Html.BeginForm("DeleteTreat", "Flavors"))
    {
      <p>@Html.Hidden("joinId", @join.TreatFlavorId)</p>
      <li>@join.Treat.TreatName <input type="submit" value="Delete" class="btn-dark btn-sm"/> </li>
    }
  }
  </ul>
}

<hr/>
 <p>@Html.ActionLink("Back to list", "Index")</p>
 <p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
 <p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
 <p>@Html.ActionLink("Add a Treat", "AddTreat", new { id = Model.FlavorId })</p>